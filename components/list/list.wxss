/**index.wxss**/
 @import '/assets/style/sprites.wxss';

 .productList {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 10rpx 0 10rpx;
}
.productList .item {
  width: 50%;
  padding: 10rpx;
}
.productList .item_box {
  padding: 20rpx;
  padding-bottom: 50rpx;
  position: relative;
  overflow: hidden;
}
.productList .item_box .img {
  width: 305rpx;
  /* height: 225rpx; */
  height: 305rpx;
}
.product_name {
  font-size: 28rpx;
  margin: 10rpx 0;
  line-height: 38rpx;
  height: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

}
.item_price {
  font-size: 28rpx;
  color: #f00;
  align-items: center;
  padding: 12rpx 0;
  border-top: 1px solid #ddd;
}
.item_originalPrice {
  color: #666;
  font-size: 24rpx;
}
.time {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: #d6598e;
  font-size: 24rpx;
}

.endTime {
  background-color: #999;
}