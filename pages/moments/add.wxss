/* pages/moments/add.wxss */

.bg{background-image: linear-gradient(285deg, #fe6959 0%,#ff1656 100%);height: 70rpx;}

.form{position: relative;top: -50rpx;border-radius: 40rpx 40rpx 0 0;background: #fff;}
  .form textarea{padding: 40rpx 10rpx;height: 200rpx;}
    .form .photo .head{border-top: 1px dotted #e4e4eb;height: 68rpx;line-height: 68rpx;}

.uploadBtn {
  width: 220rpx;
  height: 220rpx;
  border: 1px dashed #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background-color: #f3f3f3;
  color: #333;
  font-size: 24rpx;
  border-radius: 10rpx;
}
.uploadBtn image{width: 80rpx;height: 80rpx;}
.hide {
  display: none;
}

.uploadList {
  display: flex;
  flex-wrap: wrap;
  margin-right: -15rpx;
}

.uploadItem {
  width: 220rpx;
  height: 220rpx;
  /* margin-bottom: 15rpx; */
  margin: 0 15rpx 15rpx 0;
  position: relative;
}

.uploadItem image{
  width: 220rpx;
  height: 220rpx;
  border-radius: 10rpx;
}

.icon-small {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #fff;
  border-radius: 100%;
  overflow: hidden;
}

.video{position: relative;}
  .video video{width: 400rpx;}

.submit{position: fixed;bottom: 40rpx;left: 50rpx;width: 650rpx;
	height: 110rpx;
	background-image: linear-gradient(313deg, 
  #fe6959 0%, 
  #ff1656 100%);
	box-shadow: 0px 3px 6px 0px 
		rgba(255, 59, 59, 0.26);
  border-radius: 5px;
  margin:0 auto;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
  font-size: 36rpx;
  font-weight: 500;
}