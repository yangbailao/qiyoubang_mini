.my-location{
  width: 61rpx;
	height: 61rpx;
	background-color: #ffffff;
	box-shadow: 0px 3px 6px 0px 
		rgba(0, 0, 0, 0.16);
  border-radius: 8rpx;
  position: absolute;
  top: calc(100% - 450rpx);
  right: 50rpx;
  z-index: 500;
  padding: 11rpx 0 0 11rpx;
}

.my-location image{ width: 40rpx; height: 40rpx;}

.btn{height: 112rpx;
  background-image: linear-gradient(313deg, 
  #fe6959 0%,
		#ff1656 100%
		);
	box-shadow: 0px 3px 6px 0px 
		rgba(255, 59, 59, 0.26);
color: #fff;
  margin: 0 auto;
  font-size: 36rpx;
  text-align: center;
  line-height: 112rpx;
}