/* pages/mission/add.wxss */

.submit{position: fixed;bottom: 40rpx;left: 50rpx;width: 650rpx;
	height: 110rpx;
	background-image: linear-gradient(313deg, 
  #fe6959 0%, 
  #ff1656 100%);
	box-shadow: 0px 3px 6px 0px 
		rgba(255, 59, 59, 0.26);
  border-radius: 5px;
  margin:0 auto;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
  font-size: 36rpx;
  font-weight: 500;
  z-index: 9999;
}

.bg{
  height: 250rpx;
  background-image: linear-gradient(313deg, 
  #fe6959 0%, 
  #ff1656 100%);
}
  .bg image{width: 750rpx;height: 200rpx;}

.form{
  background: #fff;
  border-radius: 40rpx;
  padding-top: 40rpx;
  position: relative;
  top: -50rpx;

}
  .form .form-item{
    display: flex;
    height: 88rpx;
    margin-bottom: 20rpx;
    line-height: 88rpx;
  }
  .form .no-height{height: auto;}
  .form .form-item text{font-size: 30rpx;width: 174rpx;height: 88rpx;}
  .form .form-item input{border: 1px solid #f8f8fa;width: 516rpx;height: 88rpx;border-radius: 10rpx;padding: 0 20rpx;}
  .form .form-item .textarea{border: 1px solid #f8f8fa;width: 476rpx;border-radius: 10rpx;padding: 20rpx;}




.plaClass {
  color: #ccc;
  font-size: 28rpx;
}

/* 选择框 */
.select_box {
  background: #fff;
  width: 516rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: left;
  position: relative;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 88rpx;
  border: 1px solid #f8f8fa;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  font-size: 28rpx;
  flex: 1;
  color: rgb(102, 102, 102);
  line-height: 88rpx;
  height: 88rpx;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 88rpx;
  width: 474rpx;
  /* border-left: 1px solid #f8f8fa;
  border-right: 1px solid #f8f8fa;
  border-bottom: 1px solid #f8f8fa; */
  height: 0;
  overflow-y: auto;
  background: #fff;
  transition: height 0.3s;
  z-index: 99999;
  border-top: 0px;
  border-radius: 10rpx;
}

.option_box .option {
  display: block;
  line-height: 88rpx;
  font-size: 28rpx;
  width: 476rpx;
  border-bottom: 1px solid #f8f8fa;
  padding: 0rpx 20rpx;
  color: rgb(102, 102, 102);


}

/* 选择框 */


.uploadList {
  width: 516rpx;
  display: flex;
  flex-wrap: wrap;
  margin-right: -15rpx;
}

.uploadItem {
  width: 220rpx;
  height: 220rpx;
  /* margin-bottom: 15rpx; */
  margin: 0 15rpx 15rpx 0;
  position: relative;
}

.uploadItem image{
  width: 220rpx;
  height: 220rpx;
  border-radius: 10rpx;
}

.icon-small {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #fff;
  border-radius: 100%;
  overflow: hidden;
}
.uploadBtn {
  width: 220rpx;
  height: 220rpx;
  border: 1px dashed #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background-color: #f3f3f3;
  color: #333;
  font-size: 24rpx;
  border-radius: 10rpx;
}
.uploadBtn image{width: 80rpx;height: 80rpx;}
.hide {
  display: none;
}