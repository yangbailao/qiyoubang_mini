/* pages/rescue/index.wxss */

.my-location{
  width: 61rpx;
	height: 61rpx;
	background-color: #ffffff;
	box-shadow: 0px 3px 6px 0px 
		rgba(0, 0, 0, 0.16);
  border-radius: 8rpx;
  position: absolute;
  top: calc(100% - 450rpx);
  right: 50rpx;
  z-index: 500;
  padding: 11rpx 0 0 11rpx;
}

.my-location image{ width: 40rpx; height: 40rpx;}


.searchBar{
  width: 690rpx;
	height: 88rpx;
	background-color: #ffffff;
	box-shadow: 0px 1px 2px 0px 
    rgba(96, 97, 112, 0.16);
  border-radius: 50rpx;
  display: flex;
  position: fixed;
  top: 78px;
  left: 30rpx;
  z-index: 666;
}
.searchBar image{width: 50rpx;height: 50rpx;margin: 19rpx 25rpx 0 30rpx;}
.searchBar input{height: 88rpx;line-height: 88rpx;width: 585rpx;}

.pop-box {
  width: 690rpx;
  height: 236rpx;
  
  /* border: 1rpx solid pink; */

  overflow: hidden;
  position: fixed;
  bottom: 0rpx;
  left: 30rpx;
}

@keyframes unfold {
  0% {
    height: 320rpx;
  }

  25% {
    height: 416rpx;
  }

  50% {
    height: 518rpx;
  }

  75% {
    height: 614rpx;
  }

  100% {
    height: 716rpx;
  }
}

@keyframes shrink {
  100% {
    height: 320rpx;
  }

  75% {
    height: 416rpx;
  }

  50% {
    height: 518rpx;
  }

  25% {
    height: 614rpx;
  }

  0% {
    height: 716rpx;
  }
}
.on {
  height: 716rpx;
  animation: unfold 0.2s 1 ease-out;
}
.off {
  height: 320rpx;
  animation: shrink 0.2s 1 ease-in;
}

.list{border-radius: 10px;background: #fff;
  box-shadow: 0px 2px 4px 0px 
   rgba(96, 97, 112, 0.16);
}

.list .switch{ text-align: center;padding-top: 14rpx;}
.list .switch image{ width: 30rpx; height: 30rpx;}
.list .title{display: flex;justify-content:space-between;margin-bottom: 30rpx;}
.list .title .text{
  color: #1c1c28;
  width: 128rpx;
  height: 50rpx;
  line-height: 40rpx;
  text-align: center;
  border-bottom: solid 2px #ff3b3b;
  font-size: 32rpx;
}
.list .title .more{line-height: 50rpx;color: #8f90a6;}

.list .item{font-size: 32rpx;display: flex;justify-content:space-between;border-bottom: dotted 1px #e4e4eb;
padding: 8rpx 0; box-sizing: border-box;
}
.list .item .name {
	display: flex;
	justify-content: flex-start;
	align-items: center;
	font-size: 36rpx;
}
.list .item .price-info {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-end;
}
.list .item .price{color: #ff5c5c;}


.overWrap{
	background-color: rgba(0,0,0,.6);
	display: flex;
	justify-content: center;
	align-items: center;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 500;
}
.overWrap > .box {
	background-color: white;
	width: 60%;
	height: 250rpx;
	z-index: 501;
	border-radius: 25rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
	padding: 0 12rpx;
	box-sizing: border-box;
}
.box text {
	font-size: 32rpx;
}