/* pages/personal/feedback.wxss */
page {
  background-color: #fff;
}
.bg{
  height: 250rpx;
  background-image: linear-gradient(313deg, 
  #fe6959 0%, 
  #ff1656 100%);
}
  .bg image{width: 750rpx;height: 200rpx;}

.form{
  background-color: #ffffff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  margin: 0 auto;
  padding-top: 30rpx;
  margin-top: -40rpx;

  
}
.form .wrap {
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
}
.form .wrap text {
	padding: 10rpx 0;
	display: inline-block;
	font-size: 32rpx;
}
.form .wrap image {
	margin-top: 20rpx;
	width: 65rpx;
	height: 85rpx;
}
.red {
	color:#ff1656;
}
.submit{
	width: 350rpx;
	height: 100rpx;
	background-image: linear-gradient(313deg, 
  #fe6959 0%, 
  #ff1656 100%);
	box-shadow: 0px 3px 6px 0px 
		rgba(255, 59, 59, 0.26);
  border-radius: 5px;
  margin:0 auto;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  font-size: 36rpx;
  margin-top:45rpx;
  font-weight: 500;
}
