.user-info {
  color: #fff;
  height: 200rpx;
  background-image: linear-gradient(285deg, #fe6959 0%,#ff1656 100%);
}

.user-info .li{
  float: left;
}

.user-info .userinfo-avatar {
  width: 90rpx;
  height: 90rpx;
  margin: 20rpx;
  border-radius: 50%;
  border:1px solid #fff;
  background-image: linear-gradient(90deg, 
		);
	box-shadow: 0px 3px 6px 0px 
		rgba(0, 0, 0, 0.16);
}

.user-info .detail{
  width: 380rpx;
}

.user-info .detail .username{
  font-size: 32rpx;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
}

.user-info .detail .info{
  font-size: 24rpx;
  height: 34rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-info .detail .info image{
  margin-right: 5rpx;
  width: 30rpx;
  height: 30rpx;
}
.user-info .detail .info view{
  display: flex;
  align-items: center;
}

.user-info .login{
  display: flex;
  align-items: center;
  height: 120rpx;
}
.user-info .login .btn{height: 52rpx;line-height: 52rpx;padding: 0 15rpx;margin-left: 10rpx;
  background-color: #ffca05;
  box-shadow: 0px 3px 6px 0px 
   rgba(255, 202, 5, 0.46);
    text-align: center;
    border-radius: 10rpx;
  }
.user-info .login button{color: #fff;font-size: 28rpx;font-weight: normal;width: 140rpx;}
.user-info .un-login{background-color: #fff;display: flex;align-items: center;justify-content: center;}
.user-info .un-login image{width: 50rpx;height: 50rpx;}

.bar1{
  width: 690rpx;
	height: 152rpx;
	background-color: #ffffff;
	box-shadow: 0px 1px 2px 0px 
		rgba(96, 97, 112, 0.16);
  border-radius: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin:0 auto;
  position: relative;
  top: -50rpx;
  padding: 0 30rpx;
}

  .bar1 .btn{display: flex;align-items: center;flex-direction: column;}
    .bar1 .btn image{width: 44rpx;height: 44rpx;margin-bottom: 18rpx;}


.bar2{display: flex;justify-content: space-between;position: relative;top: -28rpx;}
  .bar2 .btn{
    width: 332rpx;
    height: 152rpx;
    background-color: #ffffff;
    box-shadow: 0px 1px 2px 0px 
      rgba(96, 97, 112, 0.16);
    border-radius: 5px;
    display: flex;
    align-items: center;
    padding: 28rpx 18rpx;
  }
    .bar2 .blue{}
      .bar2 .blue .icon{background-image: linear-gradient(323deg, 
        #3789f7 0%, 
        #68a3f2 100%);
      box-shadow: 0px 3px 6px 0px 
        rgba(78, 149, 244, 0.4);}
        .bar2 .blue .text .title{color: #4a93f5;}
    .bar2 .purple{}
      .bar2 .purple .icon{background-image:linear-gradient(322deg, #b34fea 0%, #9753fd 100%);box-shadow: 0px 3px 6px 0px rgba(153, 83, 250, 0.26);}
    .bar2 .btn .icon{width: 88rpx;height: 88rpx;display: flex;justify-content: center;align-items: center;border-radius: 50%;margin-right: 20rpx;}
      .bar2 .purple .text .title{color: #9853fc;}
      .bar2 .btn .icon image{width: 44rpx;height: 44rpx;}
    .bar2 .btn .text{display: flex;flex-direction: column;align-items: flex-start;height: 88rpx;}
      .bar2 .btn .text .title{height: 40rpx;line-height: 40rpx;margin-bottom: 12rpx;}
      .bar2 .btn .text .desc{height: 30rpx;line-height: 30rpx;font-size: 22rpx;}
    
.list{
  width: 690rpx;
  margin: 0 auto;
  background-color: #ffffff;
  box-shadow: 0px 1px 2px 0px 
    rgba(96, 97, 112, 0.16);
  border-radius: 5px;
  /* margin-top: 52rpx; */
}
  .list .item{display: flex;height: 88rpx;justify-content: space-between;align-items: center;border-bottom: 1px solid #fbfbfb;padding: 0 28rpx;}
    .list .item .menu{width: 34rpx;height: 34rpx;}
    .list .item .menu>image{width: 34rpx;height: 34rpx;}
    .list .item text{font-size: 28rpx;width: 552rpx; text-align: left;}
    .list .item .arrow{width: 28rpx;height: 36rpx;}
    .list .item .arrow>image{width: 28rpx;height: 36rpx;}

.list .item .serive_btn {
  width: 100%;
  display: flex;height: 88rpx;justify-content: space-between;align-items: center;
  padding: 0;
  font-weight: normal;
  background-color: transparent;
}
