/* pages/personal/myComment.wxss */
.listView {
  padding: 24rpx 30rpx;
}
.listView .item {
  background-color: #ffffff;
	box-shadow: 0px 1px 2px 0px 
		rgba(96, 97, 112, 0.16);
  border-radius: 5px;
  padding: 20rpx 20rpx 0 20rpx;
  margin-bottom: 20rpx;
}
.shopInfo {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
  border-bottom: solid 2rpx #e4e4eb;
}
.shopInfo .time {
  font-size: 24rpx;
  color: #8f90a6;
}
.shop_li {
  flex: 1;
  display: flex;
  justify-content: space-between;
}
.shop_li image {
  width: 72rpx;
  height: 72rpx;
  border-radius: 94rpx;
	border: solid 2rpx #ffffff;
}
.shop_rv {
  margin-left: 12rpx;
  flex: 1;

}
.shop_rv .name {
  font-size: 28rpx;
	letter-spacing: 0rpx;
	color: #555770;
}
.shop_rv .tt {
  font-size: 24rpx;
	letter-spacing: 0rpx;
	color: #1c1c28;
}
.conte_tt {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #1c1c28;
}
.img_views {
  margin: 0 -12rpx;
  
}
.img_views .img-item {
  width: 33.333333%;
  float: left;
  padding: 0 12rpx;
  margin-bottom: 24rpx;
}
.img_views .img-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 6rpx;
  display: block;
}
.shop_bv {
  height: 104rpx;
  border-top: solid 2rpx #e4e4eb;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bv_l {
  flex: 1;
}
.bv_l image {
  width: 32rpx;
  height: 32rpx;
  float: left;
}
.bv-r .btn {
  width: 130rpx;
	height: 60rpx;
	border-radius: 6rpx;
  border: solid 2rpx #ff5c5c;
  color: #ff5c5c;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
}













