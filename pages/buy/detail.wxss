/* 轮播图 */
.bannerView {
  height: 500rpx;
  z-index: 50;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}
.swiper {
  position: relative;
  overflow: hidden;
  height: 100%;
  padding: 14rpx;
  box-sizing:border-box;
  background-color: #fff;
  border-radius: 22rpx;
  box-shadow: rgba(0, 0, 0, 0.16);
}
.swiper swiper{
  height: 100%;
}
.swiper swiper-item {
  box-sizing: border-box;
  width: 100%;
}
.banner-item {
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  color: #666;
  font-size: 26rpx;
}
.banner-item image {
  width: 100%;
  display: block;
  height: 100%;
  border-radius: 22rpx;
}

.dots{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
  z-index: 99;
}
.dots .dot{
  margin: 0 5rpx;
  width: 10rpx;
  height: 10rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 5rpx;
  transition: all .5s;
}
.dots .dot.active{
  width: 50rpx;
  background: #fff;
  transition: 0.5s all;
}



