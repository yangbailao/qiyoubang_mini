/* pages/bike/list.wxss */


.big .item{
  float: left;
  width: 336rpx;
	height: 468rpx;
	background-color: #ffffff;
	box-shadow: 0px 1px 2px 0px 
		rgba(96, 97, 112, 0.16);
  border-radius: 5px;
  margin-top: 18rpx;
  padding: 21rpx;
}
.big .item:nth-child(odd){
  margin-right: 18rpx;
}

.big .item .images image{border-radius: 3px;width: 294rpx;height: 200rpx;}
.big .item .info .head .title{height: 42rpx;line-height: 42rpx;font-size: 32rpx;color: #1c1c28;margin-top: 10rpx;}
.big .item .info .head .see{height: 32rpx;line-height: 32rpx;font-size: 24rpx;}
.big .item .info .price{height: 84rpx;display: flex;align-items: center; font-size: 40rpx;color: #ff5c5c;}
.big .item .info .user {display: flex;align-items: center;justify-content: space-between;font-size: 20rpx;border-top: dotted 1px #f2f2f5;height: 72rpx;}
.big .item .info .user .username{display: flex;align-items: center;}
.big .item .info .user .username image{width: 32rpx;height: 32rpx;margin-right: 10rpx;border-radius: 50%;}

.list .item{
  width: 690rpx;
	height: 240rpx;
	background-color: #ffffff;
	box-shadow: 0px 1px 2px 0px 
		rgba(96, 97, 112, 0.16);
  border-radius: 5px;
  margin-top: 18rpx;
  padding: 25rpx;
  display: flex;
  justify-content: space-between;
}

.list .item .images{width: 200rpx;}
.list .item .images image{width: 190rpx;height: 190rpx;border-radius: 10rpx;}

.list .item .info{width: 420rpx;}
.list .item .info .head {display: flex;align-items: center;justify-content: space-between;height: 42rpx;}
.list .item .info .head .title{height: 42rpx;line-height: 42rpx;font-size: 32rpx;color: #1c1c28;}
.list .item .info .head .see{height: 32rpx;line-height: 32rpx;font-size: 24rpx;}
.list .item .info .price {height: 96rpx;display: flex;align-items: center; font-size: 44rpx;color: #ff5c5c;}
.list .item .info .user{display: flex;align-items: flex-end;justify-content: space-between;font-size: 20rpx;border-top: dotted 1px #f2f2f5;height: 52rpx;}
.list .item .info .user .username{display: flex;align-items: center;}
.list .item .info .user .username image{width: 32rpx;height: 32rpx;border-radius: 50%;margin-right: 10rpx;}
