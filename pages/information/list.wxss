/* pages/mission/list.wxss */

.cates{
  height: 80rpx;
  background-color: #ffffff;
	box-shadow: 0px 1px 2px 0px 
    rgba(96, 97, 112, 0.16);

  white-space: nowrap;
}
.cates .item{margin-right: 30rpx;height: 80rpx;line-height: 80rpx;display: inline-block;}
.cates .cur{border-bottom: solid 3px #ff5c5c;}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.list{padding-bottom: 26rpx;}
.list .item{
  margin-top: 16rpx;
  width: 690rpx;
	height: 166rpx;
	background-color: #ffffff;
	box-shadow: 0px 1px 2px 0px 
		rgba(96, 97, 112, 0.16);
  border-radius: 5px;
  padding: 20rpx;
}

.sb{display: flex;align-items: center;justify-content: space-between;}


.list .item .head {height: 72rpx;}
  .list .item .head .title{width: 520rpx; height: 42rpx;line-height: 42rpx;font-size: 32rpx;color: #1c1c28;overflow: hidden;padding-bottom: 30rpx;}
  .list .item .head .see{height: 32rpx;line-height: 32rpx;font-size: 24rpx;}

.list .item .info{height: 86rpx;}
  .list .item .info .price{height: 86rpx;display: flex;align-items: center; font-size: 44rpx;color: #ff5c5c;}
  .list .item .info .btn{
    width: 110rpx;
    height: 52rpx;
    background-color: #ffa61d;
    border-radius: 3px;
    color: #fff;text-align: center;
    line-height: 52rpx;
  }
.list .item .location{margin-bottom: 10rpx;height: 46rpx;line-height: 47rpx;}
.list .item .user{align-items: flex-end;font-size: 20rpx;border-top: solid 1px #f2f2f5;height: 52rpx;}
  .list .item .user .username{display: flex;align-items: center;}
  .list .item .user .username image{width: 32rpx;height: 32rpx;border-radius: 50%;margin-right: 10rpx;}


 
  

  /* 导航搜索 */
  .headSearch {
    padding: 20rpx 0;
    background-image: linear-gradient(285deg, #fe6959 0%,#ff1656 100%);
  }
  .searchView {
    width: 95%;
    margin: auto;
    height: 60rpx;
    border-radius: 30rpx;
    background-color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 16rpx;
    
  }
  .searchView .icon {
    width: 30rpx;
    margin-right: 10rpx;
  }
  .searchView input {
    font-size: 26rpx;
    color: #000;
    width: 180rpx;
  }
  .search_pc {
    color: #666
  }
  .searchView text {
    font-size: 26rpx;
    color: #666;
  }
  .search_sv input {
    flex: 1;
  }


  /* 头部文字 */
.head-text{
  padding-bottom: 15rpx;
  color: #fff;
  height: 65rpx;
  line-height: 50rpx;
  text-align: center;
  background-image: linear-gradient(285deg, #fe6959 0%,#ff1656 100%);
}