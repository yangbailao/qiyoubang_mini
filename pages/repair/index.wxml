<view wx:if="{{showMask}}" bindtap="hideMask" class="overWrap" >
	<view bindtap="goTo" data-map="{{currentM.map_address}}" class="box" >
    <view style="display:flex;padding:0 20rpx;" >
      <view style="flex:1;" >
        <text>{{currentM.title}}</text>
        <view style="height:15rpx;" ></view>
