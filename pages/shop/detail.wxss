/* pages/shop/detail.wxss */
.shop-img{width: 750rpx;height: 562rpx;}
.info{
  background: #fff;
}
.info .title,.info .rank,.info .open-time,.info .tel,.info .address{padding: 0 20rpx;}
.info .title{font-size: 34rpx;font-weight: bold;height: 75rpx;line-height: 75rpx;color: #000;padding-top: 15rpx;}
.info .rank{color: #f00;height: 60rpx;display: flex;align-items: center;font-size: 28rpx;}
.info .rank text{font-size: 24rpx;color: #666;margin-left: 5rpx;}
.info .open-time,.info .tel,.info .address{display: flex;align-items: center;height: 50rpx;}
.info .title-icon{width: 30rpx;height: 30rpx;margin-right: 10rpx;}
.info .address{justify-content:space-between;border-top: 1px solid #e4e4eb;height: 80rpx;margin-top: 15rpx;}

/* 价格列表 */
.price-list{background: #fff;padding: 40rpx 30rpx;  margin-top: 20rpx;}
.price-list .item{
  padding: 0 20rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px dotted #f2f2f5;
}
.price-list .item:last-child{border-bottom: 0;}
.price-list .item .price{color: #ff5c5c;}

/* 评价列表 */
.comment {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 50rpx 50rpx 0;
  padding-bottom: 130rpx;
}
.comment .notData {
  padding: 40rpx 0;
}
.commentItem {
  padding-bottom: 40rpx;
}
.userInfo {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  justify-content: space-between;
}
.userInfo_R {
  width: 550rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 12rpx;
}
.userInfo_R text {
  line-height: 32rpx;
}
.userInfo_R .time {
  color: #999;
  font-size: 24rpx;
}
.userInfo_R .nickname {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 40rpx;
}
.userInfo_R .cate {
  height: 40rpx;
  font-size: 24rpx;
}
.userMsg {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 30rpx;
  border-top: dotted 2rpx #e4e4eb;
  padding-top: 20rpx;
}
.userInfo image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}
.images{clear: both;display: flex;flex-wrap:wrap;}
.images image{border-radius: 5px;border:3px solid #fff;width: 210rpx;height: 210rpx;}


/* 底部 */
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  height: 120rpx;
  width: 750rpx;
  background: #fff;
}
.footer .btns{display: flex;align-items: center;justify-content: center;width: 250rpx;}
.footer .btns image{width: 32rpx;height: 32rpx;margin-right: 10rpx;}
.footer .call{
  width: 250rpx;
  background-image: linear-gradient(312deg, 
		#ff1656 0%, 
    #fe6959 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer .call button {
  background-color: transparent;
}
.footer .call image{width: 100rpx;height: 100rpx;}